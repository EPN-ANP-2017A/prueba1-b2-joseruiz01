{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron"><h1>Platos list</h1>

            <table class="table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Disponible</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for plato in platos %}
                    <tr>
                        <td><a href="{{ path('platos_show', { 'id': plato.id }) }}">{{ plato.id }}</a></td>
                        <td>{{ plato.nombre }}</td>
                        <td>{{ plato.precio }}</td>
                        <td>{% if plato.disponible %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('platos_show', { 'id': plato.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('platos_edit', { 'id': plato.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('platos_new') }}">Create a new plato</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
